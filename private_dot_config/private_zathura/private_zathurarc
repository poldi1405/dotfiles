set selection-clipboard clipboard

set default-bg         "#4f4f4f"
set default-fg         "#d5d2be"
set inputbar-bg        "#3f3f3f"
set inputbar-fg        "#d5d2be"
set statusbar-bg       "#2b2b2b"
set statusbar-fg       "#d5d2be"
set recolor-lightcolor "#3f3f3f"
set recolor-darkcolor  "#d5d2be"
set recolor            "true"

# setting recolor-keep true will keep any color your pdf has.
# if it is false, it'll just be black and white
set recolor-keephue    "true"

set font Inconsolata\ 12

set adjust-open "width"

set synctex true
set synctex-editor-command "vimer +%{line} %{input}"
